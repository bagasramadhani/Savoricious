<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">



    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/temukan_komunitasmu"
        android:adjustViewBounds="true"
        android:layout_marginBottom="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/untuk_anda"
            android:text="Untuk anda"
            android:fontFamily="@font/poppins"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/imageButton_western"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                tools:src="@drawable/western"/>

            <ImageButton
                android:id="@+id/imageButton_india"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                tools:src="@drawable/india"/>

            <ImageButton
                android:id="@+id/imageButton_indonesia"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:clipToOutline="true"
                tools:src="@drawable/indonesia"/>
        </LinearLayout>


        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Cari Komunitas"
            android:background="@drawable/img_1"
            />


        <LinearLayout
            android:background="@drawable/ic_background_abu"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">


            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ind"
                android:layout_marginTop="5dp"
                android:adjustViewBounds="true"
                android:layout_marginBottom="10dp"/>

        </LinearLayout>



    </LinearLayout>
</LinearLayout>