<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingRight="16dp"
    android:paddingLeft="16dp">
    <androidx.appcompat.widget.Toolbar

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/back"
                android:background="@drawable/back"
                android:layout_width="32dp"
                android:layout_height="32dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/poppinsmedium"
                android:text="Buat Password"
                android:textColor="#000000"
                android:textSize="16dp"
                android:typeface="normal" />
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="190dp"
            android:layout_height="170.72dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:src="@drawable/logo"/>
    </LinearLayout>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_tambah_resep"
        android:fontFamily="@font/poppinsmedium"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:text="Email Admin Suport"
        android:textColor="@color/white"
        android:background="@drawable/bg_shape"
        android:backgroundTint="#D22827"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_whatapp"
        android:fontFamily="@font/poppinsmedium"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:textSize="16dp"
        android:text="WhatApp Responden"
        android:textColor="@color/white"
        android:background="@drawable/bg_shape"
        android:backgroundTint="#D22827"/>
    <Button
        android:layout_marginTop="10dp"
        android:id="@+id/btn_website"
        android:fontFamily="@font/poppinsmedium"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_gravity="center"
        android:text="Websie"
        android:textSize="16dp"
        android:textColor="@color/white"
        android:background="@drawable/bg_shape"
        android:backgroundTint="#D22827"/>
</LinearLayout>