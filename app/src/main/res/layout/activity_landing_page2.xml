<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    tools:context=".LandingPage1">


    <ImageView
        android:id="@+id/iv_lp2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:layout_weight="1"
        android:layout_marginTop="100dp"
        android:layout_gravity="center"
        app:srcCompat="@drawable/iv_lp2" />

    <TextView
        android:id="@+id/textView"
        android:layout_below="@+id/iv_lp2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_weight="1"
        android:textColor="@color/black"
        android:layout_marginTop="30dp"
        android:textAlignment="center"
        android:fontFamily="@font/poppinsmedium"
        android:textSize="12dp"
        android:text="Dapatkan pengalaman memasak anda dengan menjelajahi fitur - fitur menarik yang telah kami sediakan untuk anda" />

    <ImageView
        android:id="@+id/iv_move_lp2"
        android:layout_below="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        app:srcCompat="@drawable/iv_move_lp2" />

    <Button
        android:id="@+id/btn_lanjut"
        android:layout_below="@+id/iv_move_lp2"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="20dp"
        android:backgroundTint="#D12827"
        android:textColor="@color/white"
        android:background="@drawable/bgbuttonlp"
        android:text="Lanjut" />

</RelativeLayout>