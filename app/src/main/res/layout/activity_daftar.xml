<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/baeg"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Masuk"
            android:textColor="@color/white"
            android:textSize="32sp"
            android:textStyle="bold"
            android:fontFamily="@font/poppinsextrabold"/>

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Selamat bergabung dengan kami"
            android:fontFamily="@font/poppinsmedium"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/top"
        android:paddingLeft="60dp"
        android:id="@+id/llbar">

        <Button
            android:id="@+id/button2a"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/oppinsemibold"
            android:text="Masuk"
            android:textColor="@color/grey_1" />

        <Button
            android:id="@+id/button1a"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:fontFamily="@font/oppinsemibold"
            android:text="Daftar"
            android:textColor="@color/red" />


    </LinearLayout>

    <LinearLayout
        android:id="@+id/lldaftar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/llbar"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama"
            android:textColor="@color/black_2"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dft_nama"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/baegemail"
            android:drawableLeft="@drawable/ph_user"
            android:fontFamily="@font/poppinsregular"
            android:hint="  Masukkan Nama"
            android:padding="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/grey_1"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:layout_marginTop="10dp"
            android:textColor="@color/black_2"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dftmail"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baegemail"
            android:drawableLeft="@drawable/addsimbol"
            android:fontFamily="@font/poppinsregular"
            android:hint=" masukkan email"
            android:padding="10dp"
            android:textColor="@color/grey_1"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="password"
            android:textColor="@color/black_2"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/dft_email"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baegemail"
            android:drawableLeft="@drawable/img"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:fontFamily="@font/poppinsregular"
            android:hint=" masukkan password"
            android:padding="10dp"
            android:textColor="@color/grey_1"
            android:textSize="14sp"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/poppinsmedium"
            android:includeFontPadding="false"
            android:text="Konfirmasi Password"
            android:textColor="@color/black_2"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email1a"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/baegemail"
            android:drawableLeft="@drawable/img"
            android:drawableRight="@drawable/baseline_visibility_off_24"
            android:fontFamily="@font/poppinsregular"
            android:hint=" masukkan konfirmasi password"
            android:padding="10dp"
            android:textColor="@color/grey_1"
            android:textSize="14sp"
            android:textStyle="normal" />

        <Button
            android:id="@+id/button5a"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="40dp"
            android:background="@drawable/masukshape"
            android:fontFamily="@font/poppinsmedium"
            android:text="Daftar"
            android:textColor="@color/white"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/lldaftar"
        android:gravity="center"
        >

        <TextView
            android:id="@+id/textView5a"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppinsmedium"
            android:text="Belum punya akun? "
            android:textSize="12dp"
            android:textColor="@color/black_1" />

        <Button
            android:id="@+id/button6a"
            android:layout_width="50dp"
            android:layout_height="48dp"
            android:textSize="12dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/poppinsmedium"
            android:text="Daftar"
            android:textColor="@color/red" />


    </LinearLayout>


</RelativeLayout>


